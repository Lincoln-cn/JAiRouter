# 开发环境 Dockerfile for JAiRouter
FROM eclipse-temurin:17-jdk-alpine

# 设置维护者信息
LABEL maintainer="JAiRouter Team"
LABEL description="JAiRouter Development Environment"
LABEL version="1.0-SNAPSHOT"

# 安装必要的工具
RUN apk add --no-cache curl wget

# 创建应用用户（安全最佳实践）
RUN addgroup -S jairouter && \
    adduser  -S -G jairouter jairouter

# 设置工作目录
WORKDIR /app

# 创建必要的目录
RUN mkdir -p /app/logs /app/config /app/config-store && \
    chown -R jairouter:jairouter /app

# 复制应用 JAR 文件
COPY target/model-router-*.jar app.jar

# 配置文件通过卷挂载提供，无需复制到镜像中

# 设置 JVM 参数（开发环境）
ENV JAVA_OPTS="-Xms256m -Xmx512m -XX:+UseG1GC -agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=*:5005"

# 设置应用参数
ENV SPRING_PROFILES_ACTIVE=dev
ENV SERVER_PORT=8080

# 暴露端口（应用端口 + 调试端口）
EXPOSE 8080 5005

# 切换到应用用户
USER jairouter

# 健康检查
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:8080/actuator/health || exit 1

# 启动应用
ENTRYPOINT ["sh", "-c", "java $JAVA_OPTS -jar app.jar"]