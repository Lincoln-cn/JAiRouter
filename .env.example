# JAiRouter Environment Configuration Template
# Copy this file to .env and update the values for your environment

# ===========================================
# JWT Configuration
# ===========================================

# JWT Secret Key (REQUIRED for production)
# Must be at least 32 characters long for security
# Generate with: openssl rand -base64 32
JWT_SECRET=your-very-secure-jwt-secret-key-at-least-32-characters-long

# JWT Token Expiration (in minutes)
# Recommended: 15 minutes for production, 60 for development
JWT_EXPIRATION_MINUTES=15

# JWT Refresh Token Expiration (in days)
# Recommended: 30 days for production, 1 day for development
JWT_REFRESH_EXPIRATION_DAYS=30

# ===========================================
# Redis Configuration
# ===========================================

# Redis Host
REDIS_HOST=redis

# Redis Port
REDIS_PORT=6379

# Redis Password (REQUIRED for production)
# Generate with: openssl rand -base64 24
REDIS_PASSWORD=your-secure-redis-password-here

# ===========================================
# Application Configuration
# ===========================================

# Spring Profile (dev, staging, prod)
SPRING_PROFILES_ACTIVE=prod

# Server Port
SERVER_PORT=8080

# ===========================================
# Security Configuration
# ===========================================

# Enable JWT Persistence (true/false)
JWT_PERSISTENCE_ENABLED=true

# Enable Security Audit (true/false)
SECURITY_AUDIT_ENABLED=true

# Security Audit Retention (in days)
SECURITY_AUDIT_RETENTION_DAYS=180

# ===========================================
# Monitoring Configuration
# ===========================================

# Grafana Admin Credentials
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Prometheus Retention
PROMETHEUS_RETENTION=30d

# ===========================================
# Database Configuration (Optional)
# ===========================================

# If using external database for audit logs
# DATABASE_URL=jdbc:postgresql://localhost:5432/jairouter
# DATABASE_USERNAME=jairouter
# DATABASE_PASSWORD=your-database-password

# ===========================================
# Performance Configuration
# ===========================================

# JVM Memory Settings
JAVA_OPTS=-Xms1g -Xmx2g -XX:+UseG1GC -XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0

# ===========================================
# Development Configuration
# ===========================================

# Debug Port (for development)
DEBUG_PORT=5005

# Log Level (TRACE, DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# ===========================================
# Backup Configuration
# ===========================================

# Backup Directory
BACKUP_DIR=/backup/jairouter

# Backup Retention (in days)
BACKUP_RETENTION_DAYS=30

# ===========================================
# Network Configuration
# ===========================================

# External URL (for production)
EXTERNAL_URL=https://jairouter.example.com

# Allowed Origins (for CORS)
ALLOWED_ORIGINS=https://jairouter.example.com,https://admin.jairouter.example.com

# ===========================================
# SSL/TLS Configuration
# ===========================================

# SSL Certificate Path
SSL_CERT_PATH=/etc/ssl/certs/jairouter.crt
SSL_KEY_PATH=/etc/ssl/private/jairouter.key

# ===========================================
# High Availability Configuration
# ===========================================

# Instance ID (for multi-instance deployment)
INSTANCE_ID=1

# Cluster Nodes (comma-separated)
CLUSTER_NODES=jairouter-1:8080,jairouter-2:8080,jairouter-3:8080

# ===========================================
# Notification Configuration
# ===========================================

# Email Configuration (for alerts)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=alerts@example.com
SMTP_PASSWORD=your-smtp-password

# Webhook URL (for alerts)
WEBHOOK_URL=http://webhook-server:5001/webhook