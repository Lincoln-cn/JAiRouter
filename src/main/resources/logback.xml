<?xml version="1.0" encoding="UTF-8"?>
<!-- 
    ⚠️  注意：此配置文件已被 logback-spring.xml 替代
    建议使用 logback-spring.xml 以支持多环境配置
    
    当前配置仅作为后备配置，建议在生产环境中：
    1. 将日志级别调整为 WARN 或 INFO
    2. 禁用控制台输出，仅输出到文件
    3. 配置日志文件轮转和清理策略
-->
<configuration debug="false" scan="true" scanPeriod="30 seconds">
    
    <!-- 文件输出 - 调试日志 -->
    <appender name="FILE_DEBUG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/jairouter-debug.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{traceId:-}] %logger{50} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/jairouter-debug.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>7</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- 控制台输出 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{traceId:-}] %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <!-- 
        ⚠️  生产环境建议配置：
        - 将 root level 改为 "WARN" 
        - 移除 STDOUT appender
        - 为关键组件单独配置 INFO 级别
    -->
    <root level="INFO">
        <appender-ref ref="FILE_DEBUG" />
        <appender-ref ref="STDOUT"/>
    </root>
    
    <!-- 生产环境建议的日志级别配置示例（注释状态） -->
